{
  "background": {
    "service_worker": "./frontend/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/frontend/js/dictionary.js",
        "/frontend/js/registration.js"
      ]
    }
  ],
  "action": {
    "default_icon": "/frontend/img/icon.png",
    "default_popup": "/frontend/html/index.html",
    "default_title": "Saver",
    "icons": {
      "128":"/frontend/img/icon.png",
      "16": "/frontend/img/icon.png",
      "32": "/frontend/img/icon.png",
      "48": "/frontend/img/icon.png"
    }
  },

  "manifest_version": 3,
  "name": "Saver",
  "permissions": [
    "activeTab",
    "cookies",
    "clipboardWrite",
    "storage",
    "background",
    "tabs",
    "scripting",
    "http://*/",
    "https://*/"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "optional_permissions": [
    "unlimitedStorage"
  ],
  "short_name": "Saver",
  "version": "1.1"
}